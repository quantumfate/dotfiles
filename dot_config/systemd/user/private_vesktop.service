[Unit]
Description=Vesktop (Discord client)
After=graphical-session.target
BindsTo=graphical-session.target

[Service]
ExecStartPre=/bin/sh -c 'until ping -c1 1.1.1.1 >/dev/null 2>&1; do sleep 1; done; sleep 1'
ExecStart=/usr/lib/vesktop/vesktop
Restart=on-failure
KillMode=mixed
SendSIGHUP=yes

[Install]
WantedBy=graphical-session.target
